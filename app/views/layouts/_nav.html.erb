<nav>
  <div>
      <h1><a href="#">LOCI</a></h1>
  </div>

  <ul>
    <li><a href="#">About</a></li>
    <li><a href="#" data-reveal-id="firstModal">Login</a></li>
    <li><a href="#" data-reveal-id="secondModal">Sign Up</a></li>
  </ul>



  <div id="firstModal" class="reveal-modal" data-reveal aria-labelledby="firstModalTitle" aria-hidden="true" role="dialog">
    <h1>Please Login</h1>
    <%= form_for :user do |f| %>
      <% f.label :email %>
      <%= f.text_field :email, :placeholder => "Email" %>
      <% f.label :password %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <div><%= f.submit "Submit", :class => "button tiny" %></div>
    <%end%>
  </div>

  <div id="secondModal" class="reveal-modal" data-reveal aria-labelledby="firstModalTitle" aria-hidden="true" role="dialog">
    <h1>Please Sign Up</h1>
    <%= form_for :user do |f| %>
      <% f.label :first_name %>
      <%= f.text_field :first_name, :placeholder => "First Name" %>

      <% f.label :last_name %>
      <%= f.text_field :last_name, :placeholder => "Last Name" %>

      <% f.label :address %>
      <%= f.text_field :address, :placeholder => "Address" %>

      <% f.label :email %>
      <%= f.email_field :email, :placeholder => "Email" %>

      <% f.label :password %>
      <%= f.password_field :password, :placeholder => "Password" %>

      <% f.label :password_confimation %>
      <%= f.password_field :password_confimation, :placeholder => "Password Confirmation"%>
      <div><%= f.submit "Submit", :class => "button tiny" %></div>
    <%end%>  
  </div>

  
</nav>